<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.MCIT.raf">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/splash"
        android:name ="com.MCIT.raf.ParseApplication"
        android:largeHeap="true">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity android:name="com.MCIT.raf.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.MCIT.raf.LoginActivity"
            android:theme="@style/loginTheme"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.MCIT.raf.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/splash" />
        <activity
            android:name="com.MCIT.raf.BookActivity"
            android:label="@string/title_activity_book"
            android:parentActivityName="com.MCIT.raf.HomeActivity"
            android:theme="@style/splash">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.MCIT.raf.HomeActivity" />
            >
        </activity>
        <activity
            android:name="com.MCIT.raf.MoreActivity"
            android:label="@string/title_activity_more"
            android:theme="@style/splash" />
        <activity
            android:name="com.MCIT.raf.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/splash" />
        <activity android:name="com.MCIT.raf.GetPointsActivity" />
        <activity
            android:name="com.MCIT.raf.GetBookActivity"
            android:label="@string/title_activity_get_book"
            android:theme="@style/splash" />
        <activity
            android:name="com.MCIT.raf.AddBookActivity"
            android:label="@string/title_activity_add_book"
            android:theme="@style/splash"></activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.MCIT.raf.signup"
            android:label="Signup"
            android:parentActivityName="com.MCIT.raf.LoginActivity"
            android:theme="@style/loginTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.MCIT.raf.LoginActivity" />
        </activity>

    </application>

</manifest>